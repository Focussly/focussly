{
  "name": "focussly",
  "version": "1.0.0-alpha.0",
  "description": "Photo editing software",
  "author": "Jérôme Wohlschlegel <jerome.wohlschlegel@gmail.com>",
  "license": "MIT",
  "main": "src/process/index.js",
  "keywords": [
    "electron"
  ],
  "scripts": {
    "postinstall": "cd src/views/main/ && cp .env.production.example .env.production && npm install",
    "dev:electron": "electron .",
    "dev:views": "cd src/views/main/ && npm run start",
    "build:process": "webpack",
    "build:views": "rm -rf dist/views && mkdir -p dist/views && cd src/views/main/ && npm run build",
    "build:dist": "npm run build:process && npm run build:views && node build/scripts/before-build.js",
    "build:mac": "npm run build:dist && electron-builder build --mac",
    "build:win": "npm run build:dist && electron-builder build --win",
    "build:linux": "npm run build:dist && electron-builder build --linux"
  },
  "devDependencies": {
    "electron": "^19.0.8",
    "electron-builder": "^23.0.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@focussly/electron-layer": "^1.0.0",
    "electron-is-dev": "^2.0.0"
  }
}
